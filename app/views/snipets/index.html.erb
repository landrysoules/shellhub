<%- model_class = Snipet -%>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="page-header">
            <h1><%= @header || "Snipets" %></h1>
        </div>
    </div>
</div>
<div class="row">
    <% @snipets.each do |snipet| %>
        <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><%= snipet.title %></h3>
            </div>
            <div class="panel-body">
                <div>
                    <b>author:</b> <%= snipet.username %>
                </div>
                <div>
                    <b>added:</b> <%= snipet.created_at.strftime("%F") %>
                </div>

                <div>
                    <b>command:</b> <%= snipet.content %>
                </div>
            </div>
            <div class="panel-footer">
                  <%= link_to "show", snipet_path(snipet), class: "btn btn-primary" %>
                  <%= link_to  "edit", edit_snipet_path(snipet), class: "btn btn-primary" if  user_signed_in? && current_user.id == snipet.user_id %>
                  <%= link_to  "delete", snipet_path(snipet), method: "delete", data: {confirm: "Are you sure ?"}, class: "btn btn-danger" if  user_signed_in? && current_user.id == snipet.user_id %>
            </div>
        </div>
    </div>
<% end %>
</div>
